{
    "include": ["src"],
    "compilerOptions": {
        "declaration": true,
        "emitDeclarationOnly": true,
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "allowJs": true,
        "module": "esnext",
        "target": "esnext",
        "outDir": "./dist"
    }
}
